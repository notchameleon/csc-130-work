package project2;

public class LinkedStack<T>{
	private Node<T> top;
	private int size;
	
	public LinkedStack() 
	{
		top = null;
		size = 0;
	}
	
	/*
	 * push(T element) - void
	 * pushes an element on top of the linked stack.
	 * @param element - new elementon the -stack.
	 */
	
	public void push(T element)
	{
		Node<T> newNode = new Node<T>();
		
		newNode.setNext(top);
		top = newNode;
	}
	
	
	
	/*
	 * pop() - T
	 * removes the top most element in the top most position of the stack.
	 * @throws EmptyStackException.
	 */
	public T pop() throws EmptyStackException
	{
		if (isEmpty()) 
		{
			throw new EmptyStackException("Cannot pop from empty stack");
		}
		
		T data = top.getData();
		top = top.getNext();
		return data;
	}
	
	
	/*
	 * 
	 * peeek() - T
	 * Peeks and takes a look at the top most element in the top most position of the stack.
	 * doesnt no remove
	 * @throws EmptyStackException
	 */
	
	public T peek() throws EmptyStackException
	{
		if (isEmpty())
		{
			throw new EmptyStackException("Cannot pop from empty stack");
		}
		
		
		T data = top.getData();
		
		return data;
	}
	
	/*
	 * isEmpty() - boolean
	 * Determineds whether the stack
	 is empty or not.
	 */
	
	public boolean isEmpty() 
	{
		return top == null;
	}
	

}
